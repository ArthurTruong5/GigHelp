  <section id="about-us">
    <div class="container">
      <h2>Modal Login Example</h2>
      <!-- Trigger the modal with a button -->
      <button type="button" class="btn btn-default btn-lg" id="myBtn">Login</button>

      <!-- Modal -->
      <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">
          <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <%= f.error_notification %>
          <!-- Modal content-->
          <div class="modal-content">
            <div class="modal-header">
              <button type="button" class="close" data-dismiss="modal">&times;</button>
              <h4 style="color:red;"><span class="glyphicon glyphicon-lock"></span> Login</h4>
            </div>
            <div class="modal-body">
              <form role="form">
                <div class="form-group">
                  <label for="usrname"><span class="glyphicon glyphicon-user"></span> Username</label>
                  <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Enter email', input_html: { class: 'input-md', id: 'usrname' } %>
                </div>
                <div class="form-group">
                  <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
                  <%= f.input :password, required: true, autofocus: true, label: false, placeholder: 'Enter password', input_html: { class: 'input-md', id: 'usrname' } %>
                </div>
                <div class="checkbox">
                  <label><%= f.input :remember_me, as: :boolean, style: 'margin: 0px;' if devise_mapping.rememberable? %></label>
                </div>
                <button type="submit" class="btn btn-default btn-success btn-block"><span class="glyphicon glyphicon-off"></span> Login</button>
              </form>
            </div>
            <div class="modal-footer">
              <button type="submit" class="btn btn-default btn-default pull-left" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span> Cancel</button>
              <%= f.button :submit, "Log in", class: 'btn btn-default btn-default pull-left button-with-image' %>
              <% end %>
              <p>Not a member? <a href="#">Sign Up</a></p>
              <p>Forgot <a href="#">Password?</a></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
