<!-- Modal -->
<div class="modal fade" id="myModal" role="dialog">
  <div class="modal-dialog">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
    <!-- Modal content-->
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
        Login
      </div>
      <div class="modal-body">
        <form role="form">
          <div class="form-group">
            <label for="usrname"><span class="glyphicon glyphicon-user"></span> Username</label>
            <%= f.input :email, required: true, autofocus: true, label: false, placeholder: 'Enter email', input_html: { class: 'input-md', id: 'usrname' } %>
          </div>
          <div class="form-group">
            <label for="psw"><span class="glyphicon glyphicon-eye-open"></span> Password</label>
            <%= f.input :password, required: true, autofocus: true, label: false, placeholder: 'Enter password', input_html: { class: 'input-md', id: 'usrname' } %>
          </div>
          <div class="checkbox">
            <label><%= f.input :remember_me, as: :boolean, style: 'margin: 0px;' if devise_mapping.rememberable? %></label>
          </div>
          <button type="submit" class="btn btn-default btn-success btn-block button-unique"><span class="glyphicon glyphicon-off"></span> Login</button>
        </form>
        <br>
        <%= button_to user_google_oauth2_omniauth_authorize_url(), class: 'btn btn-default btn-success btn-block button-unique' do %>
        Sign In With Google <i class="fab fa-google"></i>
        <% end %>
      </div>
      <div class="modal-footer">
        <button type="submit" class="btn btn-default btn-default pull-left button-unique" data-dismiss="modal"><span class="glyphicon glyphicon-remove"></span>Cancel</button>
        <%= f.button :submit, "Log in", class: 'btn btn-default btn-default pull-left button-with-image button-unique' %>
        <% end %>
      </div>
    </div>
  </div>
</div>
