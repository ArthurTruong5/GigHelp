<div class="page-header">
  <%= link_to tasks_path, class: 'btn btn-default' do %>
    <span class="glyphicon glyphicon-list-alt"></span>
    Back
  <% end %>
  <%= link_to edit_task_path(@task), class: 'btn btn-primary' do %>
    <span class="glyphicon glyphicon-pencil"></span>
    Edit
  <% end %>
  <h1>Show task</h1>
</div>

<dl class="dl-horizontal">
  <dt>Title:</dt>
  <dd><%= @task.title %></dd>

  <dt>Description:</dt>
  <dd><%= @task.description %></dd>

  <dt>Due:</dt>
  <dd><%= @task.due %></dd>

  <dt>People:</dt>
  <dd><%= @task.people %></dd>

  <dt>Image:</dt>
  <dd><%= image_tag @task.image.url%></dd>
</dl>

<div class="col-md-7 col-md-offset-1">


  <h1 class="review_title"><%= @task.title %></h1>
  <p><%= @task.description %></p>

         <% if @bids.blank? %>
         <p>Hi <%= current_user.name %>, would you like to bid?</p>
           <p>Hi, if you would like to bid. Click on the bid button below.</p>
           <%= link_to "Bid Task", new_task_bid_path(@task), class: "btn btn-danger" %>
         <% else %>
           <% @bids.each do |bid| %>
             <div class="bids">
               <p><%= bid.name %></p>
               <p><%= bid.comment %></p>
               <p><%= bid.offer %></p>
             </div>
           </div>
          <p>Bid was created by <%= bid.name.capitalize %></p>
           <div class="time_ago">
            <p>Bid created <%= time_ago_in_words bid.created_at %> ago</p>
           </div>

           <% end %>
         <% end %>
