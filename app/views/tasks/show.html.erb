<div class="page-header">
  <%= link_to tasks_path, class: 'btn btn-default' do %>
  <span class="glyphicon glyphicon-list-alt"></span>
  Back
<% end %>
<%= link_to edit_task_path(@task), class: 'btn btn-primary' do %>
<span class="glyphicon glyphicon-pencil"></span>
Edit
<% end %>
<h1>Show task</h1>
</div>

<dl class="dl-horizontal">
<dt>Image:</dt>
<dd><%= image_tag @task.image.url%></dd>
</dl>

<section class="task-show">

<div class="col-md-6 col-md-offset-1">


<div class="container">
  <div class="row">

    <div class="task-details well col-md-10">
    <h1>Task Name</h1>
    <p><%= @task.title %></p>
                			<div class="divider"><i class="fas fa-cloud"></i></div>
    <h1>Task Description</h1>
    <p><%= @task.description %></p>
                			<div class="divider"><i class="fas fa-cloud"></i></div>
    <h1>Start</h1>
    <p><%= @task.start %></p>
                			<div class="divider"><i class="fas fa-cloud"></i></div>
    <h1>Due</h1>
    <p><%= @task.due %></p>
                			<div class="divider"><i class="fas fa-cloud"></i></div>
    <h1>How many people is needed</h1>
    <p><%= @task.people %></p>
    </div>

  </div>

</div>


</div>

</section>
